<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="#1a1919"
    tools:showIn="@layout/app_bar_main">


        <RelativeLayout
            android:id="@+id/capa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_alignParentStart="true"
                android:text="Another week of great music begins"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="131dp"
                android:layout_height="139dp"
                android:layout_below="@id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/album1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="131dp"
                android:layout_height="131dp"
                android:layout_below="@id/textView2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/album2" />

        </RelativeLayout>

    <ScrollView
        android:id="@+id/capascroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/capa1">

        <RelativeLayout
            android:id="@+id/capa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_show_chart_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chart"
            android:textColor="#ffffff"
            android:layout_alignParentStart="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_event_black_24dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Releases"
            android:textColor="#ffffff"
            android:layout_below="@id/textView3"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_ondemand_video_black_24dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="#ffffff"
            android:layout_below="@id/textView4"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_radio" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podcasts"
            android:textColor="#ffffff"
            android:layout_below="@id/textView5"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#232323"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/b1" />

        <ImageView
            android:id="@+id/b2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/b2" />

        <ImageView
            android:id="@+id/b3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/b5" />

        <ImageView
            android:id="@+id/b4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/b3" />

        <ImageView
            android:id="@+id/b5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/b4" />
    </LinearLayout>

</RelativeLayout>